pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/chandana-9c/Jenkins-projects2'
            }
        }


        stage('Terraform Initialize') {
            steps {
                dir('jenkins02-infra-automation/terraform') {	// mention dir('terraform') if terraform files are inside fol called terrraform
                    sh 'terraform init'
                }// now mention dir('jenkins02-infra-automation/terraform') if terraform files are inside fol called terraform which is inside fol called jenkins02-infra-automation
            }
        }

        stage('Terraform Plan') {
            steps {
                 dir('jenkins02-infra-automation/terraform') {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'AWSCred'    // user defined/added cred id in jenkins browsers-> credentials- aws-ecr-jenkins-creds
                ]])  {
                        sh 'terraform plan'
                        sh 'terraform apply -auto-approve'
                }
            }
        }

/*        stage('Terraform Apply') {
            steps {
                dir('jenkins02-infra-automation/terraform') {
                    sh 'terraform apply -auto-approve'
                }
                // sh 'terraform apply -auto-approve'
            }
        }
*/
    }
}

