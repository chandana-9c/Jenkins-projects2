pipeline {
    agent any

    environment {
        APP_NAME = "SampleApp"	// SampleApp.txt
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${env.BRANCH_NAME}", url: 'https://github.com/chandana-9c/Jenkins-projects2'
            }
        }

        stage('Build') {
            steps {
                script {
                    echo "Building ${APP_NAME} on branch ${env.BRANCH_NAME}"
                    sh 'echo "Simulating Build - Build" > build.log'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo "Running tests for branch ${env.BRANCH_NAME}"
                    sh 'echo "Simulating Tests - Test" >> build.log'
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Deploying ${APP_NAME} from ${env.BRANCH_NAME} to Production"
                    sh 'echo "Simulating Deployment - Deploy" >> build.log'
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'build.log', allowEmptyArchive: true
            echo "Pipeline completed for ${env.BRANCH_NAME}"
        }
    }
}

