pipeline {
    agent any

    environment {
        DEPLOY_USER = "ubuntu"                 // EC2 username
        DEPLOY_HOST = "34.204.183.61"          // Replace with your EC2 IP
        DEPLOY_PATH = "/var/www/html"          // Path to Nginx web folder
        APP_FOLDER  = "jenkins02-webapp"       // Folder containing index.html
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/chandana-9c/Jenkins-projects2'
            }
        }

        stage('Build') {
            steps {
                // Optional for static web apps; add build commands if needed
                echo 'Building the app (if needed)...'
            }
        }

        stage('Test') {
            steps {
                dir("${APP_FOLDER}") {
                    script {
                        if (!fileExists("index.html")) {
                            error "index.html not found in ${APP_FOLDER}"
                        }
                        echo "index.html found in ${APP_FOLDER}"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['ec2-ssh-key-jenkinskey']) {
                    script {
                        echo "Deploying ${APP_FOLDER} to ${DEPLOY_USER}@${DEPLOY_HOST}:${DEPLOY_PATH}"
                        sh """
                        ssh -o StrictHostKeyChecking=no $DEPLOY_USER@$DEPLOY_HOST 'mkdir -p $DEPLOY_PATH'
                        rsync -avz --delete ${APP_FOLDER}/ $DEPLOY_USER@$DEPLOY_HOST:$DEPLOY_PATH/
                        """
                    }
                }
            }
        }

        stage('Post-Deployment Verification') {
            steps {
                script {
                    echo "Checking deployment..."
                    sh """
                    ssh -o StrictHostKeyChecking=no $DEPLOY_USER@$DEPLOY_HOST 'curl -s -o /dev/null -w "%{http_code}" http://localhost/' 
                    """
                    echo " Deployment verified (HTTP 200 expected)"
                }
            }
        }
    }

    post {
        success {
            echo 'ðŸŽ‰ CI/CD Pipeline executed successfully!'
        }
        failure {
            echo ' Pipeline failed.'
        }
    }
}
